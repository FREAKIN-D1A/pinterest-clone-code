<% include ./partials/header.ejs %>

<div class="w-full h-screen bg-zinc-300 flex items-center justify-center">
  <div class="w-95 h-[60vh] bg-zinc-100 px-4 py-5 rounded-md">
    <h2 class="text-4xl text-center leading-none">Create New Account</h2>
    <form action="/register" method="post">
      <input
        class="border-2 block w-full px-2 py-2 my-2"
        type="text"
        name="username"
        placeholder="username"
      />
      <input
        class="border-2 block w-full px-2 py-2 my-2"
        type="text"
        name="fullname"
        placeholder="Full Name"
      />
      <input
        class="border-2 block w-full px-2 py-2 my-2"
        type="email"
        name="email"
        placeholder="email"
      />
      <input
        class="border-2 block w-full px-2 py-2 my-2"
        type="number"
        name="contact"
        placeholder="contact"
      />
      <input
        class="border-2 block w-full px-2 py-2 my-2"
        type="password"
        name="password"
        placeholder="password"
      />

      <input
        class="border-2 block w-full px-2 py-2 my-2 bg-red-600 text-white rounded-full"
        type="submit"
        value="Sign Up"
      />
    </form>

    <a
      class="w-full text-center text-zinc-700 font-semibold inline-block mt-2"
      href="/"
      >Already have an account ? Login.
    </a>
  </div>
</div>

