<% include ./partials/header.ejs %>

<div class="w-full min-h-screen bg-zinc-800 px-10 py-8 text-white">
  <h1 class="text-xl mb-3">Update Post</h1>
  <hr class="opacity-10 mb-3" />
  <form
    action="/posts/<%=post._id%>/edit"
    method="post"
    enctype="application/json"
    class="flex flex-col items-start"
  >
    <input
      class="w-1/3 px-3 py-2 border-2 rounded-md mb-3 text-black"
      type="text"
      name="title"
      placeholder="Title"
      value="<%=post.title%>"
    />
    <textarea
      class="w-1/3 px-3 py-2 border-2 rounded-md mb-3 text-black"
      type="text"
      name="description"
      placeholder="Description"
    >
 
<%=post.description%>
  </textarea
    >
    <input
      class="w-1/3 px-3 py-2 rounded-md bg-red-600 text-white cursor-pointer text-white"
      type="submit"
      value="Update Post"
    />
  </form>
</div>

