<% include ./partials/header.ejs %>

<div class="w-full min-h-screen bg-zinc-800 px-10 py-8 text-white">
  <h1 class="text-xl mb-3">Create New Post</h1>
  <hr class="opacity-10 mb-3" />
  <form
    action="/add"
    method="post"
    enctype="multipart/form-data"
    class="flex flex-col items-start"
  >
    <input
      class="w-1/3 px-3 py-2 border-2 rounded-md mb-3"
      type="file"
      name="postimage"
    />
    <input
      class="w-1/3 px-3 py-2 border-2 rounded-md mb-3 text-black"
      type="text"
      name="title"
      placeholder="Title"
    />
    <textarea
      class="w-1/3 px-3 py-2 border-2 rounded-md mb-3 text-black"
      type="text"
      name="description"
      placeholder="Description"
    ></textarea>
    <input
      class="w-1/3 px-3 py-2 rounded-md bg-red-600 text-white cursor-pointer text-white"
      type="submit"
      value="Create Post"
    />
  </form>
</div>

